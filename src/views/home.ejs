<%- include('partials/header') %>
<section class="hero"> <!-- Inicio Banner -->
    <article class="hero__content container">
        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
        <a class="hero__link" href="/shop">SHOP</a>
    </article>
</section> <!-- Fin Banner -->
<main class="main-container"> <!-- Inicio Main -->
   
    <!-- Inicio Colecciones -->

    <% collactions.forEach (collaction => { %>
    <section class="collection container"> 
        <article class="collection__content">
            <h3 class="collection__title"><%= collaction.licence_name %></h3>
            <p class="collection__text"><%= collaction.licence_description %></p>
            <a class="collection__link" href="/shop">VER COLECCIÓN</a>
        </article>
        <picture class="collection__cover">
            <img src=".<%= collaction.licence_image %>"
                alt="<%= collaction.licence_description %>">
        </picture>
    </section>
    <% }); %>
    
    <!-- Fin Colecciones -->

    <section class="slider container glide"> <!-- Inicio Ultimos lanzamientos -->
        <h2 class="slider__title">ÚLTIMOS LANZAMIENTOS</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="slider__items glide__slides">
                <% items.forEach (item => { %>
                    <li class="glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="/shop/item/<%= item.product_id %>"> <!--VER RUTA :ID INYECTAR EJS-->
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="./img<%= item.image_front %>"
                                        alt="Figura coleccionable Funko de un Stormtrooper">
                                    <img class="card-item__img--back" src="./img<%= item.image_back %>" alt="<%= item.product_description %>">    
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence"><%= item.licence_name %></p>
                                    <h4 class="card-item__name"><%= item.product_name %></h4>
                                    <p class="card-item__price">$<%= item.price %></p>
                                    <p class="card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                <% }); %>
            </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
            <!-- data-glide-dir="<" un solo < para ser carousel -->
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="mdi:chevron-left"></iconify-icon></button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="mdi:chevron-right"></iconify-icon></button>
        </div>
    </section> <!-- Fin Ultimos lanzamientos -->
</main> <!-- Fin Main -->
<%- include('partials/footer') %>